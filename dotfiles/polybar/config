[module/memory]
type = custom/script
exec = free --mebi | sed -n '2{p;q}' | awk '{printf ("%2.2fGiB/%2.2fGiB\n", ( $3 / 1024), ($2 / 1024))}'
label = "%output%"
interval = 10
format-prefix = "ðŸ§  "

[module/cpu-usage]
type = custom/script
exec = polycpu
label = "%output%"
click-left = $TERMINAL -e htop &
interval = 10
format-prefix = "ðŸ’» "

[module/cpu-temperature]
type = custom/script
